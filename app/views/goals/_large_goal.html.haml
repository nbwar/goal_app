.bit-5
  %h2.goal_header{:data => {goal_id: goal.id}}
    Goal
  =goal.title
  =goal.description
.bit-5
  %h2
    Motivation
  %br/
  %h3
    Positive
  %br/
  %ul.goal_lists
    -goal.motivations.select{|i| i.positive}.each do |motivation|
      = render "goal_attribute", object: motivation
  %br/
  = link_to 'Add Positive Motivation', '#', :class => "add_motivation"
  %br/
  %br/
  %h3
    Negative
  %br/
  %ul.goal_lists
    -goal.motivations.reject{|i| i.positive}.each do |motivation|
      = render "goal_attribute", object: motivation

  = form_tag '#', :class => "new_form", :style => "display:none" do
    = label_tag :title, "Title"
    %br/
    = text_field_tag :title
    %br/
    = label_tag :description, "Description"
    %br/
    = text_area_tag :description
    = hidden_field_tag :klass, 'motivation'
    = hidden_field_tag :positive, false
    = hidden_field_tag :goal, goal.id
    %br/
    = submit_tag "Add"

  = link_to 'Add Negative Motivation', '#', :class => "add_motivation"


.bit-5
  %h2
    Actions
  %ul.goal_lists
    -goal.actions.each do |action|
      %li
        =action.title
        =action.description
.bit-5
  %h2
    beliefs
  %ul.goal_lists
    -goal.beliefs.each do |belief|
      %li
        =belief.title
        =belief.description
