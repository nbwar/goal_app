!!!
%html
  %head
    %title
      = yield(:title)
    = stylesheet_link_tag 'application', :media => 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    = tag 'meta', {:content => "width=device-width, initial-scale=1.0", :name => "viewport"}, true
  %body
    #nav
      = render :partial => 'shared/nav'
    #flash
      = render :partial => 'shared/flash'
    #wrapper
      = yield
    #footer
